<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.github.cookiesjuice.cookiesbot.entity.Tag" table="cookies_bot_tag">
        <id name="id" type="java.lang.Long" column="tag_id">
            <generator class="native"/>
        </id>

        <property name="name" type="java.lang.String" column="tag_name" not-null="true"/>

        <property name="reliability" type="java.lang.Double" column="tag_reliability" not-null="true"/>

        <set name="setus" inverse="true" cascade="save-update">
            <key column="tag_id"/>
            <many-to-many class="com.github.cookiesjuice.entity.Setu" column="setu_id"/>
        </set>
    </class>
</hibernate-mapping>