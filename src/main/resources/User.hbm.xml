<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.github.cookiesjuice.entity.User" table="cookies_bot_user">
        <id name="id" type="java.lang.Long" column="user_id">
            <generator class="native"/>
        </id>

<!--        <set name="grades">-->
<!--            <key column="user_id"/>-->
<!--            <one-to-many class="com.github.cookiesjuice.entity.Grade"/>-->
<!--        </set>-->

        <set name="favoriteSetus" inverse="true" cascade="save-update">
            <key column="user_id"/>
            <many-to-many class="com.github.cookiesjuice.entity.Setu" column="setu_id"/>
        </set>

        <set name="uploadSetus" inverse="true" cascade="save-update">
            <key column="user_id"/>
            <one-to-many class="com.github.cookiesjuice.entity.Setu"/>
        </set>
    </class>
</hibernate-mapping>